<h2>Blogs</h2>
<ul>
<% locals[:blogs].each do |blog| %>
  <li itemscope itemtype="http://schema.org/BlogPosting">
    <h3 itemprop="name"><a href="<%= blog['_links']['self']['href'] %>"><%= blog['title'] %></a></h3>
    <div>
      <span itemprop="author"><%= blog['author']['name'] %></span>
      <%= blog['author']['position'] %>
      <%= blog['author']['location'] %> 
      <span itemprop="dateCreated"><%= blog['pubdate'] %></span>
    </div>
    <div itemprop="articleBody"><%= blog['body'] %></div>
  </li>
<% end %>
</ul>
