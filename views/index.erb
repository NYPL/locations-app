    <!-- Translate Buttons (Removed for internal beta) -->
    <!--<nypl-translate></nypl-translate>-->

    <!-- Site Wide Alerts -->
    <nypl-site-alerts></nypl-site-alerts>

    <!-- Header -->
    <div ng-include="'views/header.html'"></div>

    <!-- Main Navigation -->
    <nypl-navigation></nypl-navigation>

    <div class="wrapper">
      <!-- Lokinator App -->
	    <div class="nypl-locations" data-ui-view data-autoscroll="false" scrolltop></div>
    </div>
    
    <!-- Footer -->
    <div ng-include="'views/footer.html'"></div>

