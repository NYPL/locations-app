    <script src="vendor/jquery.cookies.js"></script>
    <!-- end other components -->
    <!-- endbuild -->

<% if settings.env_config["angular_src"] == "bower" %>
<%= erb :angular_bower %>
<% elsif settings.env_config["angular_src"] == "ux-static-staging" %>
<%= erb :angular_ux_static_staging %>
<% else %>
<%= erb :angular_ux_static %>
<% end %>

    <!-- NYPL Components -->
    <script src="scripts/components/nypl_coordinates.js"></script>
    <script src="scripts/components/nypl_locations_api.js"></script>
    <script src="scripts/components/nypl_search/nypl_search.js"></script>
    <script src="scripts/components/nypl_sso/nypl_sso.js"></script>
    <script src="scripts/components/nypl_navigation/nypl_navigation.js"></script>
    <script src="scripts/components/nypl_breadcrumbs/nypl_breadcrumbs.js"></script>

    <!-- App Config -->
    <script src="scripts/app.js"></script>
    <!-- Filters -->
    <script src="scripts/filters/nypl_filters.js"></script>
    <!-- Controllers -->
    <script src="scripts/controllers/locations.js"></script>
    <script src="scripts/controllers/division.js"></script>
    <script src="scripts/controllers/amenities.js"></script>
    <!-- Services -->
    <script src="scripts/services/nypl_geocoder_service.js"></script>
    <script src="scripts/services/nypl_utility_service.js"></script>
    <script src="scripts/services/nypl_amenities_service.js"></script>
    <script src="scripts/services/nypl_search_service.js"></script>
    <!-- Directives -->
    <script src="scripts/directives/nypl_directives.js"></script>

